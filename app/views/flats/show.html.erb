<div class="map" style="background-image: url(<%= @flat.image_url %>);">
</div>

<div class="container margin-top-negative">
    <div class="row">
      <div class="col-8">
        <div class="flat-show-card">
           <h1><%= @flat.name %></h1>
           <p><%= @flat.address %></p>
        </div>
        <div class="flat-show-card">
          <h3>A bit more about this flat...</h3>
          <p><%= @flat.description %>
        </div>
        <div class="flat-show-card">
          <h3>Details</h3>
           <div class="d-flex">
            <p class="card-text px-3"><i class="fa-solid fa-user-group"></i> <%= @flat.number_of_guests %></p>
            <p class="card-text"><i class="fa-solid fa-euro-sign"></i> <%= @flat.price_per_night %></p>
           </div>
        </div>
      </div>
      <div class="col-4">
        <div class="flat-show-card">
          <h5>Book this place!</h5>
          <p>From: Example of date</p>
          <p>To: Example of date</p>
          <div class="btn btn-success mt-2" value="Book"></div>x
        </div>
        <div class="flat-show-card">
          <div class="d-flex align-items-center justify-content-between">
            <h6 class="no-mb">Share</h6>
            <div class="flex">
              <i class="fa-brands fa-facebook-square me-2"></i>
              <i class="fa-brands fa-twitter-square me-2"></i>
              <i class="fa-brands fa-pinterest-square me-2"></i>
              </div>
          </div>
        </div>
        <%= link_to "Edit this Flat", edit_flat_path(@flat), class: "btn btn-warning" %>
        <%= link_to "Delete", flat_path(@flat), data: {turbo_method: :delete}, class: "btn btn-danger ms-3" %>
      </div>
    </div>
  </div>
